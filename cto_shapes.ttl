    ] ;
    sh:property [
        sh:path cs:tourCapacity ;
        sh:datatype xsd:integer ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:minInclusive 1 ;
        sh:description "Maximum number of participants for this stage" ;
